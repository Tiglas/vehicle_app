<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.siemens.parkingapp.RouteActivity" >

    <fragment
        android:id="@+id/travelPlannerSelectionMap"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/travelPlannerSelectionSelectButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/travelPlannerSelectionSelectButton"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="Select" />

    <Button
        android:id="@+id/travelPlannerSelectionCancelButton"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/travelPlannerSelectionMap"
        android:layout_below="@+id/travelPlannerSelectionMap"
        android:text="Cancel" />

</RelativeLayout>
