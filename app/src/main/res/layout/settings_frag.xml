<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <CheckBox
        android:id="@+id/latecySmallerThanCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Latency smaller than " />

    <CheckBox
        android:id="@+id/priceSmallerThanCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/latecySmallerThanEditText"
        android:text="Price smaller than" />

    <CheckBox
        android:id="@+id/securityLevelCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/priceSmallerThanCheckBox"
        android:text="Security level" />

    <CheckBox
        android:id="@+id/accuracyBiggerThanCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/securityLevelTextBox"
        android:text="Accuracy bigger than" />

    <CheckBox
        android:id="@+id/completnessBiggerThanCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/accuracyBiggerThanCheckBox"
        android:text="Completness bigger than" />

    <CheckBox
        android:id="@+id/bandwithBiggerThanCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/completnessBiggerThanCheckBox"
        android:text="Bandwith bigger than" />

    <EditText
        android:id="@+id/latecySmallerThanEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/executionTrafficStatus"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/latecySmallerThanCheckBox"
        android:ems="3"
        android:inputType="number" />

    <EditText
        android:id="@+id/priceSmallerThanTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/executionTrafficStatus"
        android:layout_toRightOf="@+id/priceSmallerThanCheckBox"
        android:ems="3"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/priceSmallerThanCheckBox"
        android:layout_alignBottom="@+id/priceSmallerThanCheckBox"
        android:layout_toRightOf="@+id/priceSmallerThanTextBox"
        android:text="euro"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/securityLevelTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/securityLevelCheckBox"
        android:ems="3"
        android:inputType="number"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/completnessBiggerThanCheckBox"
        android:layout_toRightOf="@+id/accuracyBiggerThanTextBox"
        android:text="%"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/accuracyBiggerThanTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/completnessBiggerThanTextBox"
        android:layout_alignLeft="@+id/latecySmallerThanEditText"
        android:ems="3"
        android:inputType="number">
    </EditText>

    <EditText
        android:id="@+id/completnessBiggerThanTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/completnessBiggerThanCheckBox"
        android:ems="3"
        android:inputType="number"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/completnessBiggerThanCheckBox"
        android:layout_alignBottom="@+id/completnessBiggerThanCheckBox"
        android:layout_toRightOf="@+id/completnessBiggerThanTextBox"
        android:text="%"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/executionTrafficStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/latecySmallerThanCheckBox"
        android:layout_alignBottom="@+id/latecySmallerThanCheckBox"
        android:layout_toRightOf="@+id/textView3"
        android:text="ms"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bandwithBiggerThanTextBox"
        android:layout_alignBottom="@+id/bandwithBiggerThanTextBox"
        android:layout_toRightOf="@+id/bandwithBiggerThanTextBox"
        android:text="msg/s"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/bandwithBiggerThanTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_toLeftOf="@+id/textView3"
        android:ems="3"
        android:inputType="number" />

    <Button
        android:id="@+id/saveSettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/securityLevelCheckBox"
        android:layout_marginRight="25dp"
        android:text="Save" />

    <EditText
        android:id="@+id/serverLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView5"
        android:ems="8"
        android:text="192.168.111.222" >

        <requestFocus />
    </EditText>

</RelativeLayout>